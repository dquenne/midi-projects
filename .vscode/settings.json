{
  "editor.formatOnSave": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/virtualenv/*/**": true,
    "**/.hg/store/**": true
  },
  "files.insertFinalNewline": true,
  "python.formatting.provider": "black",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  }
}
